<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:colorControlHighlight">@android:color/white</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HelloTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/tabTextSize</item>
    </style>

    <style name="SplashStyle" parent="AppTheme.NoActionBar">
        <item name="android:background">@drawable/splash</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDividerColor</item>
    </style>

    <style name="PrefsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:trackTint">@color/colorBusiness</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
        <item name="android:trackTintMode">multiply</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:timePickerStyle">@style/CustomTimePickerDialogStyle</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerDialogStyle</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorBlueRectDark</item>
    </style>

    <style name="CustomDatePickerDialogStyle" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:colorAccent">@color/colorBlueRectDark</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerBackground">@color/colorBlueRectDark</item>

    </style>

    <style name="CustomTimePickerDialogStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:numbersSelectorColor">@color/colorBlueRectDark</item>
        <item name="android:colorAccent">@color/colorBlueRectDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:headerBackground">@color/colorBlueRectDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>

    </style>


</resources>
