<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="67dp"
                android:background="@drawable/blue_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="8dp"
                    android:text="БИЗНЕС"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/business_text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="19dp"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />


                <ProgressBar
                    android:id="@+id/business_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:max="5"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar_blue" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_business" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="67dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/blue_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="8dp"
                    android:text="ЛЮБОВЬ"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/love_text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="19dp"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_love" />

                <ProgressBar
                    android:id="@+id/love_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:max="5"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar_red" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="67dp"
                android:background="@drawable/blue_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="8dp"
                    android:text="ЗДОРОВЬЕ"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/health_text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="19dp"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_health" />

                <ProgressBar
                    android:id="@+id/health_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:max="5"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar_green" />
            </FrameLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout">

            <TextView
                android:id="@+id/forecast_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.25"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

            <ImageView
                android:id="@+id/like_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@color/colorAccent" />

            <ImageView
                android:id="@+id/copy_to_clipboard_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="198dp"
                android:background="@drawable/ic_copy" />

            <ImageView
                android:id="@+id/share_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/ic_share" />


        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
